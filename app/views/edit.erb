<h1>Edit a post</h1>

<% if @post %>
  <% @post.errors.full_messages.each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>

<form action="/posts/<%=@post.id%>" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <label>Title:</label>
    <br />
    <input type="text" name="post[title]" value="<%= @post.title %>">
    <br />
  <label>Author:</label>
    <br />
    <input type="text" name="post[author]" value="<%= @post.author %>">
    <br />
  <label>Content:</label>
    <br />
    <textarea name="post[content]" rows="20" cols="50"><%= @post.content %></textarea>
    <br />
  <label>Tags:</label>
    <br />
    <input type="text" name="tag[name]" value="<%= @tag_string %>">
    <br />
  <input type="submit" value="Create my awesome post">
</form>